<?xml version="1.0" encoding="UTF-8"?>
<plugin name="AAAFileServiceTools" 
        version="1.0.0" 
        description="File Service staging tools for PowerSchool. Allows authenticated users to upload, manage, and download files."
        xmlns="http://plugin.powerschool.pearson.com">
    
    <!-- Publisher information (required) -->
    <publisher name="File Service Admin">
        <contact email="support@non-support.com" />
    </publisher>
    
    <!-- Web links for PowerSchool UI integration -->
    <openid host="filesvc-stg-app.kaiweneducation.com" port="443">

    <links>
        <link display-text="File Service Tools" 
              title="File Service Tools" 
              path="/authenticate"
              >
            <ui_contexts>
                <ui_context id="admin.left_nav" />
            </ui_contexts>
        </link>
        <link display-text="User Data - Categories" 
              title="User Data Categories (U_UD_CATEGORY)" 
              path="/admin/ud/u_ud_category-list.html"
              >
            <ui_contexts>
                <ui_context id="admin.left_nav" />
            </ui_contexts>
        </link>
        <link display-text="User Data - Field Definitions" 
              title="User Data Field Definitions (U_UD_FIELDDEF)" 
              path="/admin/ud/u_ud_fielddef-list.html"
              >
            <ui_contexts>
                <ui_context id="admin.left_nav" />
            </ui_contexts>
        </link>
        <link display-text="User Data - Records" 
              title="User Data Records (U_UD_RECORD)" 
              path="/admin/ud/u_ud_record-list.html"
              >
            <ui_contexts>
                <ui_context id="admin.left_nav" />
            </ui_contexts>
        </link>
        <link display-text="User Data - Values" 
              title="User Data Values (U_UD_VALUE)" 
              path="/admin/ud/u_ud_value-list.html"
              >
            <ui_contexts>
                <ui_context id="admin.left_nav" />
            </ui_contexts>
        </link>
    </links>
    </openid>
    <oauth/>    
</plugin>
