{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Dev)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dev-build-and-start",
            "program": "${workspaceFolder}/src/FileService.Api/bin/Debug/net9.0/FileService.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger?devUser=testuser",
                "action": "openExternally"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5090"
            }
        },
        {
            "name": "Open Health (Edge)",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:5090/health.html"
        },
        {
            "name": ".NET Core Launch (Tests)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/tests/FileService.Tests/bin/Debug/net9.0/FileService.Tests.dll",
            "args": [],
            "cwd": "${workspaceFolder}/tests/FileService.Tests",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ],
    "compounds": [
        {
            "name": "Dev: API + Health",
            "configurations": [
                ".NET Core Launch (Dev)",
                "Open Health (Edge)"
            ],
            "stopAll": true
        }
    ]
}